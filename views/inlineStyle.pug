style.
    body {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'FiraSans', sans-serif;
        font-size: 120%;
        font-weight: 300;
        color: #427082;
    }

    form {
        display: flex;
        flex-direction: column;
    }

    p {
        margin: 0;
        padding: 0.6em 0;
        text-align: center;
    }

    label {
        display: flex;
        margin: 1em 0;
        align-items: center;
        flex-wrap: wrap;
    }

    label > span {
        flex-basis: 20%;
        padding: 0.5em 0;
    }

    input {
        outline: none;
    }

    input {
        flex-grow: 1;
        padding: 0.4em;
        font-size: 1em;
        border: 1px solid lightgrey;
    }

    input[type=submit] {
        align-self: center;
        width: 50%;
        border: 1px solid #477485;
        cursor: pointer;
        background: #477485;
        color: white;
        border-radius: 3px;
        box-shadow: 1px 1px 3px #427082;
    }

    input[type=submit]:hover {
        background: #4e7e90;
    }

    input:focus {
        border: 1px solid #52b49a;
        box-shadow: 0 0 8px #52b49a;
    }

    @media (max-width: 680px) {
        body {
            font-size: 100%;
            position: relative;
            align-items: flex-start;
        }

        input[type=email] {
            flex-basis: 100%;
        }

        input[type=submit] {
            width: 100%;
        }

        button {
            align-self: stretch;
        }

        p {
            text-align: justify;
            text-align-last: center;
        }
    }
